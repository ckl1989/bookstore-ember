<ul>
  {{#each model as |book|}}
      <a href="#" {{action 'openCheckoutModal' book}}>
        <li>
          <strong>{{book.title}}</strong><br><br>
          <em>by</em>
          {{link-to book.author.name 'author' book.author class="author" bubbles=false }}
        </li>
      </a>
  {{/each}}
</ul>

{{#if showAll}}
  <button {{action 'showAll'}}>Show All</button>
{{/if}}